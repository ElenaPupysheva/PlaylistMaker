<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/small_icon_pad</item>
        <item name="iconSize">@dimen/small_icon_size</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/rad</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>

        <item name="android:textColor">@color/all_txt</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">"@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsMaterialTextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/usual_text_size</item>
        <item name="android:paddingStart">@dimen/us_padSt</item>
        <item name="android:paddingEnd">@dimen/us_padEn</item>
        <item name="android:paddingVertical">@dimen/pad_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>
</resources>