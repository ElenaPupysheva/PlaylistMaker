<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/small_icon_pad</item>
        <item name="iconSize">@dimen/small_icon_size</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/rad</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>

        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SettingsMaterialTextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/usual_text_size</item>
        <item name="android:paddingStart">@dimen/us_padSt</item>
        <item name="android:paddingEnd">@dimen/us_padEn</item>
        <item name="android:paddingVertical">@dimen/pad_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>
    <style name="CustomToolbarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="SearchBar">
        <item name="android:background">@drawable/search_rounded</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:paddingHorizontal">@dimen/us_padSt</item>
        <item name="cornerRadius">@dimen/small_icon_pad</item>
        <item name="android:drawablePadding">@dimen/small_icon_pad</item>
        <item name="android:drawableStart">@drawable/search_bar_icon</item>
        <item name="android:drawableTint">#1A1B22</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textColorHint">#1A1B22</item>
        <item name="android:textSize">@dimen/us_padSt</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="ScreenParam">
        android:background="?attr/colorSecondary"
    </style>

    <style name="IconClear">
        <item name="android:iconTint">#1A1B22</item>
    </style>

    <style name="TrackBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/usual_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>

    </style>

    <style name="ArtistBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="circleStyle">
        <item name="android:fillColor">@color/white</item>
    </style>
</resources>