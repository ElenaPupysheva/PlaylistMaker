<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/small_icon_pad</item>
        <item name="iconSize">@dimen/small_icon_size</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/rad</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>

        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SettingsMaterialTextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/usual_text_size</item>
        <item name="android:paddingStart">@dimen/us_padSt</item>
        <item name="android:paddingEnd">@dimen/us_padEn</item>
        <item name="android:paddingVertical">@dimen/pad_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="CustomToolbarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:color">@color/toolBar</item>
    </style>

    <style name="SearchBar">
        <item name="android:background">@drawable/search_rounded</item>
        <item name="android:paddingHorizontal">@dimen/us_padSt</item>
        <item name="cornerRadius">@dimen/small_icon_pad</item>
        <item name="android:drawablePadding">@dimen/small_icon_pad</item>
        <item name="android:drawableStart">@drawable/search_bar_icon</item>
        <item name="android:drawableTint">#FFAEAFB4</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textColorHint">@color/knob_tint</item>
        <item name="android:textSize">@dimen/us_padSt</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="IconClear">
        <item name="android:iconTint">#AEAFB4</item>
    </style>

    <style name="ScreenParam">
        <item name="android:background">@color/changeMode</item>
    </style>

    <style name="MainScreenParam">
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="TrackBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/usual_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ArtistBar">
        <item name="android:textColor">@color/knob_tint</item>
        <item name="android:textSize">@dimen/text11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="circleStyle">
        <item name="android:fillColor">@color/knob_tint</item>
    </style>

    <style name="ShapeCornerSize2dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_2dp</item>
    </style>

    <style name="errorTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">22.27dp</item>
        <item name="android:textSize">@dimen/text19sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="errorNetTextStyle">
        <item name="android:layout_marginHorizontal">@dimen/small_icon_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">22.27dp</item>
        <item name="android:textSize">@dimen/text19sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="youSearchStyle">
        <item name="android:layout_marginHorizontal">@dimen/small_icon_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">22.27dp</item>
        <item name="android:textSize">@dimen/text19sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="errorNetButtonStyle">
        <item name="cornerRadius">@dimen/size_54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/text14sp</item>
    </style>

    <style name="SearchClearButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">@dimen/size_54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/text14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="errorNetNight">
        <item name="android:src">@drawable/error_net_light</item>
    </style>

    <style name="errorNight">
        <item name="android:src">@drawable/error_search</item>
    </style>

    <style name="albumCover">

    </style>

    <style name="musicTrackName">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="groupTrackName">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="RoundedImageStyle" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_icon_pad</item>
    </style>

    <style name="playerStyleDuration">
        <item name="android:textColor">@color/all_txt</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="playerStyleText">
        <item name="android:textColor">@color/playerColorText</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="playerStyleTextPlus">
        <item name="android:textColor">@color/all_txt</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>