<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker"
   >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/back"
        app:navigationIconTint="@color/white"
        app:iconGravity="textStart"
        app:title="@string/settings"
        app:titleTextColor="?attr/colorOnSecondary"
        app:textSize="22sp"
        android:fontFamily="@font/ys_display_medium"
        />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/top_mar"
            android:paddingVertical="@dimen/pad_vertical"
            android:text="@string/dark_theme"
            android:textColor="?attr/colorOnSecondary"

            style="@style/SettingsMaterialTextView"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/share"
            android:text="@string/share"
            style="@style/SettingsMaterialTextView"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/support"
            android:text="@string/support"
            style="@style/SettingsMaterialTextView"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/forward"
            android:text="@string/user_agree"
            style="@style/SettingsMaterialTextView"/>

</LinearLayout>