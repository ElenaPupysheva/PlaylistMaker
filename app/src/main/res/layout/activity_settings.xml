<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_background"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_setting_marg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/set_background"
            android:stateListAnimator="@null"
            android:text=""

            app:icon="@drawable/back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/all_txt"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/main_padSt"
            android:paddingEnd="@dimen/main_padEn"
            android:text="@string/settings"
            android:textColor="@color/all_txt"
            android:textSize="@dimen/main_text_size"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_mar"
        android:orientation="vertical"
        android:paddingStart="@dimen/us_padSt"
        android:paddingEnd="@dimen/us_padEn">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingVertical="@dimen/pad_vertical"
            android:text="@string/dark_theme"
            android:textColor="@color/all_txt"
            android:textSize="@dimen/usual_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/share"
            android:paddingVertical="@dimen/pad_vertical"
            android:text="@string/share"
            android:textColor="@color/all_txt"
            android:textSize="@dimen/usual_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/support"
            android:paddingVertical="@dimen/pad_vertical"
            android:text="@string/support"
            android:textColor="@color/all_txt"
            android:textSize="@dimen/usual_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/forward"
            android:paddingVertical="@dimen/pad_vertical"
            android:text="@string/user_agree"
            android:textColor="@color/all_txt"
            android:textSize="@dimen/usual_text_size" />
    </LinearLayout>
</LinearLayout>