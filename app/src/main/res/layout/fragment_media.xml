<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mediaFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenParam"
    android:orientation="vertical"
    tools:context=".media.ui.MediaFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="CustomToolbarTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:navigationIcon="@drawable/back"
        app:iconGravity="textStart"
        app:title="@string/mediatecha"
        app:fontFamily="@font/ys_display_medium" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/changeMode"
        app:tabRippleColor="@color/night_back"
        app:tabTextColor="@color/toolBar"
        app:tabIndicatorColor="@color/toolBar"
        android:textAllCaps="false" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>